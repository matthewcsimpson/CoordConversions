{
  "name": "@mcs/coordconversion",
  "version": "0.1.0",
  "description": "Convert between DD, DM, and DMS with robust parsing and formatting.",
  "license": "MIT",
  "author": "Matthew Simpson",
  "type": "module",
  "main": "./dist/index.cjs",
